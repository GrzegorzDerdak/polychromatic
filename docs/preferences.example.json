{
    "config_version": 5,                // Polychromatic's configuration revision. Do not change this!

    "tray_applet": {
        "type": "built-in"              // builtin, gtk, custom
        "value": "0"                    // If 'builtin', ID of the icon according to data/tray/icons.json
                                        // If 'gtk', an icon name is specified.
                                        // If 'custom', specify the full path.
    },

    "editor": {
        "scaling": 1,                   // Program scale, for users with high DPI screens.
        "activate_on_save": true,       // Apply key profiles to keyboard after saving changes.
        "live_switch": true,            // Apply key profiles to keyboard after choosing one.
        "live_preview": true            // Apply key profiles on keyboard while in editor.
    }
}
